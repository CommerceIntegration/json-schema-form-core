{
  "baseUrl": ".", // This must be specified if "paths" is.
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist/es6",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6",
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types",
      "./node_modules/@jsonschema"
    ],
    "baseUrl": ".",
    "paths": {
      "@jsonschema/assimilate": [ "../assimilate", "./node_modules/@jsonschema/assimilate" ]
    }
  },
  "files": [
    "src/core.ts"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
